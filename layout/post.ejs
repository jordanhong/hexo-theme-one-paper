<!-- Post meta now includes tags as well -->
<div class="post-main">

    <% if (is_post()) { %>
    
        <div class="post-main-title">
            <%= page.title %>
        </div>
        <div class="post-meta">
            <%- date(page.date, "YYYY-MM-DD") %> <br> 
            tags:
            <% page.tags.each(function(tag, index) { %>
                <a href="<%- url_for(tag.path) %>"><%= tag.name %></a><% if (index < page.tags.length - 1) { %>, <% } %>
            <% }) %>
        </div>
        <div class="post-md">
            <%- page.content %>
        </div>

    <% } else { %>

        <div class="post-md">
            <%- page.content %>
        </div>

    <% } %>

</div>
