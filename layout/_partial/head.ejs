<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" name="viewport" />
    <link rel="alternate icon" type="image/png" href="<%- url_for('/img/favicon.png') %>">
    <title>
    <%= config.title %>
    <% if (page.title) { %>
        | <%= page.title %>
    <% } else if (is_archive()) { %>
        | archive
    <% } else if (is_home()) { %>
        | main 
    <% } else if (is_category()) { %>
        | category: <%= page.category %>
    <% } else if (is_tag()) { %>
        | tag: <%= page.tag %>
    <% } %>
</title>
    <%- css('css/reset.css') %>
    <%- css('css/style.css') %>
    <%- css('css/markdown.css') %>
    <%- css('css/fonts.css') %>
</head>
